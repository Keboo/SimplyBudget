<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <LinearGradientBrush x:Key="HeaderBackgroundBrush" StartPoint="0.5,0" EndPoint="0.5,1">
    <GradientStop Offset="0.4" Color="#FF8FBC8F" />
    <GradientStop Offset="1" Color="#FFD8DCAB" />
  </LinearGradientBrush>

  <SolidColorBrush x:Key="AlternateRowBrush" Color="AliceBlue" />

  <SolidColorBrush x:Key="ErrorBrush" Color="Red" />

  <SolidColorBrush x:Key="WarningBrush" Color="MediumVioletRed" />

  <SolidColorBrush x:Key="IgnoreBrush" Color="DarkGray" />

  <SolidColorBrush x:Key="IconBrush" Color="Black" />

  <SolidColorBrush x:Key="ActiveIconBrush" Color="Blue" />
</ResourceDictionary>